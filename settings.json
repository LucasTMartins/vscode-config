{
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.iconTheme": "catppuccin-frappe",
    "redhat.telemetry.enabled": true,
    "window.menuBarVisibility": "toggle",
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "vim.useSystemClipboard": true,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // NAVIGATION
        // switch b/w buffers
        {
            "before": [
                "<S-j>"
            ],
            "commands": [
                ":bprevious"
            ]
        },
        {
            "before": [
                "<S-k>"
            ],
            "commands": [
                ":bnext"
            ]
        },
        {
            "before": [
                "<S-h>"
            ],
            "commands": [
                "workbench.action.moveEditorLeftInGroup"
            ]
        },
        {
            "before": [
                "<S-l>"
            ],
            "commands": [
                "workbench.action.moveEditorRightInGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                ":w!"
            ]
        },
        {
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                ":q"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "q"
            ],
            "commands": [
                "workbench.action.closeUnmodifiedEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "o"
            ],
            "commands": [
                "workbench.action.closeOtherEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "d"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "c"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "leader",
                "t"
            ],
            "commands": [
                "workbench.action.showAllSymbols"
            ]
        },
        {
            "before": [
                "leader",
                "k"
            ],
            "commands": [
                ":!code ~/.config/Code/User/settings.json"
            ]
        },
        {
            "before": [
                "leader",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        {
            "before": [
                "leader",
                "s"
            ],
            "commands": [
                ":split"
            ]
        },
        {
            // To scroll down and center the cursor to the middle of screen
            "before": [
                "<C-d>"
            ],
            "after": [
                "<C-d>",
                "z",
                "z"
            ]
        },
        {
            // To scroll p and center the cursor to the middle of screen
            "before": [
                "<C-u>"
            ],
            "after": [
                "<C-u>",
                "z",
                "z"
            ]
        },
        {
            // In normal mode, same like in visual mode, but can use with MOTION (w, b, ...)
            "before": [
                "leader",
                "d"
            ],
            "after": [
                "\"",
                "_",
                "d"
            ]
        },
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.view.explorer"
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "C-d"
            ],
            "commands": [
                "editor.action.addSelectionToNextFindMatch"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                ":w!"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "c"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
        // Stay in visual mode while indenting
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        // Move selected lines while staying in visual mode
        {
            "before": [
                "J"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
        {
            // In visual mode, delete WITHOUT putting content into clipboard register
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "\"",
                "_",
                "d"
            ]
        },
        {
            // In visual mode, paste over WITHOUT putting content under cursor into clipboard register
            "before": [
                "<leader>",
                "p"
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "vim.handleKeys": {
        // Avoid Vim overriding VSCode default keybindings like find in Windows
        // These two keybindings below shouldn't matter in Mac
        "<C-f>": false
    },
}